{
    "name": "mwanziamutua/omnipay-flutterwave",
    "description": "Flutterwave driver for the Omnipay PHP payment processing library",
    "keywords": [
        "omnipay",
        "flutterwave"
    ],
    "homepage": "https://github.com/mwanziamutua/omnipay-flutterwave",
    "license": "MIT",
    "authors": [
        {
            "name": "Mwanzia Mutua",
            "email": "smutua@dimetechgroup.com",
            "homepage": "https://dimetechgroup.com"
        }
    ],
    "require": {
        "omnipay/common": "v3.0-alpha.2"
    },
    "require-dev": {
        "omnipay/tests": "~3.0",
        "squizlabs/php_codesniffer": "^3",
        "phpro/grumphp": "^0.14"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\Skeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "League\\Skeleton\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
